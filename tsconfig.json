{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true, // enforces rules for type checking
        "experimentalDecorators": true, // enables experimental support for ES7 decorators
        "emitDecoratorMetadata": true, // enables the metadata necessary to support decorators
        "target": "ES2021",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ],
}